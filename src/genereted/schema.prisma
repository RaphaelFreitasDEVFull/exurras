generator client {
  provider = "prisma-client-js"
  output   = "../src/genereted"
}

datasource db {
  provider = "postgresql"
}

//////////////////////////
// ENUMS
//////////////////////////

enum Role {
  ADMIN
  OGA
  SAMBA
  MEMBER
}

enum Linha {
  OGUM
  OXOSSI
  XANGO
  OXALA
  IEMANJA
  OXUM
  IANSA
  NANA
  OMOLU
  PRETO_VELHO
  ERE
  EXU_MIRIM
  BOIADEIRO
  CABOCLA
  MARINHEIRO
  CIGANO
  CIGANA
  BAIANO
  POMBA_GIRA
  EXU
  OUTROS
}

enum PointType {
  ABERTURA
  CHAMADA
  FIRMA
  DEFUMACAO
  ENCERRAMENTO
  CURA
  PROTECAO
  OUTRO
}

//////////////////////////
// USER
//////////////////////////

model User {
  id        String   @id @default(cuid())
  name      String?
  username  String   @unique
  password  String
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())

  // Relacionamentos
  pointsCreated Point[]

  favorites Favorite[]
  approvals Point[]    @relation("ApprovedBy")

  @@index([username])
}

//////////////////////////
// POINT (PONTO)
//////////////////////////

model Point {
  id          String  @id @default(cuid())
  title       String
  slug        String  @unique
  description String?
  author      String?

  linha Linha
  type  PointType @default(OUTRO)

  lineCategoty String
  line         Lines  @relation(fields: [lineCategoty], references: [id])

  createdAt DateTime @default(now())

  // Criador
  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])

  // Moderação
  approved     Boolean   @default(false)
  approvedAt   DateTime?
  approvedById String?
  approvedBy   User?     @relation("ApprovedBy", fields: [approvedById], references: [id])

  // Mídia
  audioUrl   String?
  youtubeUrl String?

  // Relacionamentos
  sections  Section[]
  favorites Favorite[]

  @@index([title])
  @@index([linha])
  @@index([type])
  @@index([approved])
}

//////////////////////////
// LINHAS DOS PONTOS
//////////////////////////
model Lines {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  points    Point[]
  createdAt DateTime @default(now())
}

//////////////////////////
// SECTION (ESTROFE)
//////////////////////////

model Section {
  id    String @id @default(cuid())
  order Int
  text  String

  pointId String
  point   Point  @relation(fields: [pointId], references: [id], onDelete: Cascade)

  toqueId String?
  toque   Toque?  @relation(fields: [toqueId], references: [id], onDelete: Cascade)

  @@unique([pointId, order])
  @@index([pointId])
}

model Toque {
  id        String    @id @default(cuid())
  nome      String
  audio     String
  createdAt DateTime  @default(now())
  sections  Section[]
}

//////////////////////////
// FAVORITES (LIKES)
//////////////////////////

model Favorite {
  userId    String
  pointId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  point Point @relation(fields: [pointId], references: [id], onDelete: Cascade)

  @@id([userId, pointId])
  @@index([pointId])
}
